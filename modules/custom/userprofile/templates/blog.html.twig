    <script>
        document.querySelectorAll('a').forEach(anchor => {
            anchor.addEventListener('click', function(event) {
                event.preventDefault();
                let url = anchor.getAttribute('href');
                if (!url.startsWith('http://') && !url.startsWith('https://')) {
                    url = 'https://' + url;
                }
                window.open(url, '_blank');
            });
         });



           function applyResponsiveClass() {
            const images = document.querySelectorAll('img');
            images.forEach(img => {
                img.classList.remove('full-width');
                if (window.innerWidth >= 750 && img.naturalWidth > 750) {
                    img.classList.add('full-width');
                }
            });
        }

        window.onload = applyResponsiveClass;

        window.onresize = applyResponsiveClass;

        const observer = new MutationObserver(() => {
            applyResponsiveClass();
        });

       observer.observe(document.body, {
            childList: true,
            subtree: true
        });
    </script>

